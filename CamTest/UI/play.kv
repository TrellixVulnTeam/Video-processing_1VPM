WindowManager:
    ScreenVideo:
    Menu:
    Video_list:
    VideoWidget:


<ScreenVideo>:
    name: "root"

    FloatLayout:
        BoxLayout:
            size: root.width, root.height
            orientation: 'vertical'
            size_hint: (None, None)
            BoxLayout:
                size: 800, 700
                orientation: 'horizontal'

                VideoPlayer:
                    source: root.load_vid()
                    state: "play"
                    options: {'eos': 'loop'}
                    allow_stretch:True

            BoxLayout:
                size: root.width, 100
                orientation: 'horizontal'
                size_hint: (None, None)

                Button:
                    text: "Video"
                    font_size: 50
                    on_press: app.root.current = "video_list"

                Button:
                    text: "Home"
                    font_size: 50
                    on_press:
                        app.root.current = "menu"

<Menu>
    name: "menu"
    FloatLayout:
        BoxLayout:
            size: root.width, root.height
            orientation: 'vertical'
            size_hint: (None, None)

            BoxLayout:
                size: root.width, 100
                orientation: 'horizontal'
                size_hint: (None, None)

                Button:
                    text: "Back"
                    font_size: 50
                    on_release:
                        app.root.current = "root"
                Button:
                    text: "Home"
                    font_size: 50
                    on_release:
                        app.root.current = "root"
                Button:
                    text: "Menu"
                    font_size: 50
                    on_release:
                        app.root.current = "menu"

<Video_list>
    name: "video_list"
    FloatLayout:
        BoxLayout:
            size: root.width, root.height
            orientation: 'vertical'
            size_hint: (None, None)

            BoxLayout:
                orientation: 'horizontal'
                size: root.width, 50
                size_hint: (None, None)
                padding:10

                Label:
                    text: "Video Title"
                    font_size: 20
                    center_x: root.width / 2

            BoxLayout:
                orientation: 'vertical'
                size: root.width, 50
                size_hint: (None,None)
                padding: 10

                Button:
                    size: 100, 50
                    size_hint: (None,None)
                    text:"Back"
                    font_size: 20
                    pos_hint: {'right': 1}
                    on_release:
                        app.root.current = "root"

            RecycleView:
                data: [{'text': str(x)} for x in root.data_items_norm]
                viewclass: 'SelectableButton'
                SelectableRecycleBoxLayout:
                    id: controller
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    default_size_hint: 1, None
                    default_size: 100, 75
                    spacing: 10
                    padding: 10


<VideoWidget>:
    name: "video_widget"
    FloatLayout:
        BoxLayout:
            size: root.width, root.height
            orientation: 'vertical'
            size_hint: (None, None)

            BoxLayout:
                size: root.width, 500
                size_hint: (None,None)
                orientation: 'horizontal'

                VideoPlayer:
                    source: root.load_vid()
                    state: "play"

            BoxLayout:
                orientation: 'horizontal'
                size: root.width, 100
                size_hint: (None, None)
                Button:
                    text: "Root"
                    font_size:50
                    on_release:
                        app.root.current = "root"

                Button:
                    text: "Menu"
                    font_size:50
                    on_release:
                        app.root.current = "menu"
